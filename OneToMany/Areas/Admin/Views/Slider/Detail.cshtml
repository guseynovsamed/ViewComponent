@model SliderDetailVM

@{
    ViewData["Title"] = "Detail";
}

<div class="container">
    <div class="form-group">
        <h2><label class="col-md-12" style="font-weight:700">Slider Detail</label></h2>
        <div class="col-md-12 mt-3">
            <h3>ID:<input asp-for="Id" type="text" disabled class="form-control form-control-line" /></h3>
            <h3>Soft Deleted: <input asp-for="SoftDeleted" type="text" disabled class="form-control form-control-line" /></h3>
            <h3>Image <img src="~/img/@Model.Image" width="100px" height="100px" /> </h3>
        </div>
    </div>

    <div class="form-group mt-3">
        <div class="col-sm-12">
            <a asp-action="Index" class="btn btn-primary">Back</a>
        </div>
    </div>
</div>